---
import 'lenis/dist/lenis.css';
---

<script>
  import Lenis from 'lenis';

  if (!window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
    const lenis = new Lenis({
      autoRaf: true,
      smoothWheel: true,
    });

    window.addEventListener(
      'pagehide',
      () => {
        lenis.destroy();
      },
      { once: true }
    );
  }
</script>
